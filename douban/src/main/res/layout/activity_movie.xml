<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.frw.douban.act.MovieActivity">

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_search_mv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="搜索"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/tx_search_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_search_mv"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tx_search_movie"
        android:layout_marginTop="10dp">

        <TableRow>

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btn_mv_now"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="正在上映"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:roundedCorners="true"
                android:layout_margin="10dp"
                app:showOutline="false" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btn_mv_soon"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:layout_height="90dp"
                android:text="即将上映"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:roundedCorners="true"
                app:showOutline="false" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btn_mv_us"
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:layout_height="90dp"
                android:text="北美票房"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:roundedCorners="true"
                app:showOutline="false" />
        </TableRow>

    </TableLayout>
</RelativeLayout>
