<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:id="@+id/item_mv_pic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/item_mv_title_chn"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_mv_pic"
        android:layout_toEndOf="@+id/item_mv_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/item_mv_title_eng"
        android:layout_alignBottom="@+id/item_mv_title_chn"
        android:layout_toRightOf="@+id/item_mv_title_chn"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/item_mv_info"
        android:layout_below="@+id/item_mv_title_eng"
        android:layout_toRightOf="@+id/item_mv_pic"
        android:layout_toEndOf="@+id/item_mv_pic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:id="@+id/item_mv_btn_detail"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/item_mv_pic" />

</RelativeLayout>
